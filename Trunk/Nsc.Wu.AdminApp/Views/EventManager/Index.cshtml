      ajax:
        {
            url: "/EventManager/GetData",
            type: "post",
            data: function (data) {
                debugger;
                var orderByCol = data.order[0].column;
                var re = data.search['value'];
                var search = {

                    OrderBy: data.columns[orderByCol].name,
                    Dir: data.order[0].dir,
                    Start: data.start,
                    Length: data.length,
                    Draw: data.draw,
                    Search:data.search['value']
                };

                return JSON.stringify(search);
            },
            contentType: "application/json; charset=utf-8",
            dataType: "JSON",
        },

      "columns": [
          {
              "data": "Id",
              name: "Id"
          },
          {
              "data": "Title",
              name: "Title"
          },
          {
              "data": "Description",
              name: "Description"
          }
      ]
    });
  });
</script>

